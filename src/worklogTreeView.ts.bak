      this.refresh();

      await vscode.window.withProgress(
        {
          location: vscode.ProgressLocation.Notification,
          title: "üöÄ Generating worklog from selected commit",
          cancellable: false,
        },
        async (progress) => {
          try {
            progress.report({ increment: 0, message: "Selecting commit..." });
            
